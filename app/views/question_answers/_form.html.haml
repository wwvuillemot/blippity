= form_for([@level, @question_answer]) do |f|
  - if @question_answer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@question_answer.errors.count, "error")} prohibited this question_answer from being saved:"
      %ul
        - @question_answer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :question
    = f.text_field :question
  .field
    = f.label :answer
    = f.text_field :answer
  .field
    = f.label :score
    = f.number_field :score, :min => 0
  .field
    = f.label :bonus
    = f.number_field :bonus, :min => 0
  .actions
    = f.submit 'Save'
