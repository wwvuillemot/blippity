:javascript
  var blopManager;
  $(document).ready( function() {
    var maxNumberOfBlipsAtATime = jQuery.browser.mobile ? 20 : 40;
    var domNodeParent    = '#wrap';
    blopManager = new BlipManager(maxNumberOfBlipsAtATime, domNodeParent);
    $('#blopManager').bind('click', function(){
      blopManager.toggle();
    });
  });
